@page
@model TvedcAdmin.Pages.Contacts.EditModel

@{
    ViewData["Title"] = "ویرایش";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AboutUs_Contacts.Id" />
            <div class="form-group">
                <label asp-for="AboutUs_Contacts.AssistantId" class="control-label"></label>
                <input asp-for="AboutUs_Contacts.AssistantId" class="form-control" />
                <span asp-validation-for="AboutUs_Contacts.AssistantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AboutUs_Contacts.Name" class="control-label"></label>
                <input asp-for="AboutUs_Contacts.Name" class="form-control" />
                <span asp-validation-for="AboutUs_Contacts.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AboutUs_Contacts.Value" class="control-label"></label>
                <input asp-for="AboutUs_Contacts.Value" class="form-control" />
                <span asp-validation-for="AboutUs_Contacts.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
