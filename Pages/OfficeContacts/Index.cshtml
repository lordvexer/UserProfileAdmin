                </td>
                <td>
                    @if (!item.AssistantId.HasValue)
                    {
                        <a href="?Id=@item.Id"> View </a><span>|</span>
                    }
                    else
                    {
                        <a href="~/OfficeExpert/index?Id=@item.Id">View</a><span>|</span>
                    }
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a href="~/Records/index?Id=@item.Id">سوابق</a> |
