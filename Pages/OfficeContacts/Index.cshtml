                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DegreeOfEducation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duties)
